# Anthropic API key (optional if authenticated via Claude Code CLI)
# If not set, the server will use the OAuth token from ~/.claude/.credentials.json
ANTHROPIC_API_KEY=

# AI model to use (default: claude-sonnet-4-5-20250929)
# Use claude-haiku-3-5 for faster/cheaper responses
AI_MODEL=

# Invite token (required â€” users must enter this to access the app)
INVITE_TOKEN=

# Vercel token for deployment (required for publish)
VERCEL_TOKEN=

# Vercel project name (used with REST API deployment)
VERCEL_PROJECT_NAME=

# Git remote for persistent project storage (optional)
# When set, projects are committed and pushed to this repo
HERSITE_GIT_REMOTE=

# Editor frontend origin (default: http://localhost:5173)
EDITOR_ORIGIN=

# Server port (default: 3001)
PORT=

# Set to "production" for production mode
NODE_ENV=

# Custom paths (defaults to ./sites, ./data, ./uploads relative to project root)
# SITES_DIR=
# HERSITE_DB_PATH=
# UPLOADS_DIR=

# Custom Anthropic API base URL (optional, for proxies)
# ANTHROPIC_BASE_URL=
