# Anthropic API key (optional if authenticated via Claude Code CLI)
# If not set, the server will use the OAuth token from ~/.claude/.credentials.json
ANTHROPIC_API_KEY=

# Vercel token for deployment (required for publish)
VERCEL_TOKEN=

# Vercel project name (used with REST API deployment)
VERCEL_PROJECT_NAME=

# Git remote for persistent project storage (optional)
# When set, projects are committed and pushed to this repo
HERSITE_GIT_REMOTE=

# Basic auth password (optional â€” when set, all routes require Basic auth)
HERSITE_AUTH_PASSWORD=

# Editor frontend origin (default: http://localhost:5173)
EDITOR_ORIGIN=

# Server port (default: 3001)
PORT=

# Set to "production" for build-and-serve mode instead of astro dev
NODE_ENV=
