---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const recentPosts = allPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const experience = [
  {
    company: "TPC Group",
    role: "Management Trainee",
    desc: "Leading luxury retailer in Southeast Asia, representing Cartier, Van Cleef & Arpels, IWC, Jaeger-LeCoultre, Panerai, Piaget, Roger Dubuis, and Vacheron Constantin. Focused on operational excellence, client relationship management, and strategic business development.",
    period: "Jul 2025 – Present",
    location: "Singapore"
  },
  {
    company: "BCG",
    role: "Analytics Consultant",
    desc: "Training structural thinking and data-driven decision making within top-tier consulting frameworks."
  },
  {
    company: "CITIC Securities",
    role: "Investment Banking Analyst",
    desc: "Deep diving into A-share IPOs and understanding capital market mechanisms."
  },
  {
    company: "DiDi",
    role: "Business Data Analyst",
    desc: "Supporting high-growth business decisions with rigorous data analytics."
  }
];

const education = [
  {
    school: "Nanyang Technological University",
    degree: "Master of Science, Finance",
    period: "Jul 2024 – 2025",
    location: "Singapore"
  },
  {
    school: "Central University of Finance and Economics",
    degree: "Bachelor's Degree, Economics",
    period: "Sep 2020 – Jun 2024",
    location: "Beijing, China"
  }
];
---

<Layout title="Home" hideNav={true}>

  <!-- Hero Section -->
  <section class="min-h-screen relative flex items-center px-6 md:px-12 lg:px-24 overflow-hidden">
    <div class="absolute top-0 right-0 w-[50vw] h-[80vh] bg-[#D4CFC7] opacity-10 rounded-bl-[200px] -z-10 blur-3xl"></div>

    <!-- Fixed nav for home page -->
    <header class="fixed top-0 left-0 right-0 z-50 bg-cream/80 backdrop-blur-md border-b border-[#D4CFC7]/30">
      <nav class="max-w-7xl mx-auto px-6 md:px-12 lg:px-24 flex items-center justify-between h-16">
        <a href="/" class="font-serif text-xl font-light text-[#1A1A1A] hover:text-[#8B7355] transition-colors">Cynthia Liu</a>
        <ul class="flex items-center gap-8">
          <li><a href="#about" class="font-sans text-xs uppercase tracking-[0.2em] text-[#1A1A1A]/70 hover:text-[#8B7355] transition-colors">About</a></li>
          <li><a href="#experience" class="font-sans text-xs uppercase tracking-[0.2em] text-[#1A1A1A]/70 hover:text-[#8B7355] transition-colors">Experience</a></li>
          <li><a href="#insights" class="font-sans text-xs uppercase tracking-[0.2em] text-[#1A1A1A]/70 hover:text-[#8B7355] transition-colors">Blog</a></li>
          <li><a href="#connect" class="font-sans text-xs uppercase tracking-[0.2em] text-[#1A1A1A]/70 hover:text-[#8B7355] transition-colors">Connect</a></li>
        </ul>
      </nav>
    </header>

    <div class="max-w-7xl w-full mx-auto grid grid-cols-1 lg:grid-cols-12 gap-12 items-center pt-20 lg:pt-0">
      <div class="lg:col-span-7 flex flex-col justify-center space-y-8 animate-fade-up" style="animation-delay: 0.1s;">
        <div class="space-y-2">
          <p class="font-sans text-[#8B7355] tracking-[0.2em] text-sm uppercase font-medium">Finance & Luxury Retail Professional &middot; Singapore</p>
          <h1 class="font-serif text-6xl md:text-8xl lg:text-9xl leading-[0.9] text-[#1A1A1A] font-light">
            Cynthia <br/> <span class="italic">Liu</span>
          </h1>
        </div>

        <p class="font-sans text-lg md:text-xl text-[#1A1A1A]/80 font-light max-w-md border-l-2 border-[#D4CFC7] pl-6 py-2">
          Management Trainee @ TPC Group.<br/>
          Bridging capital, strategy, and impact.
        </p>

        <div class="flex flex-wrap gap-6 pt-4">
          <a href="#experience" class="px-8 py-3 bg-[#1C3A5E] text-white font-sans text-sm tracking-widest uppercase hover:bg-[#152c46] transition-colors duration-300">
            View My Work
          </a>
          <a href="#connect" class="px-8 py-3 border border-[#1A1A1A] text-[#1A1A1A] font-sans text-sm tracking-widest uppercase hover:bg-[#1A1A1A] hover:text-white transition-colors duration-300">
            Get in Touch
          </a>
        </div>
      </div>

      <div class="lg:col-span-5 relative h-full flex justify-center lg:justify-end animate-fade-up" style="animation-delay: 0.3s;">
        <div class="w-64 h-64 md:w-80 md:h-80 lg:w-[400px] lg:h-[400px] rounded-full overflow-hidden border border-[#D4CFC7] relative group">
          <div class="w-full h-full bg-[#E5E0D8] flex items-center justify-center text-[#8B7355]">
            <span class="font-serif italic text-2xl">CL</span>
          </div>
          <div class="absolute inset-0 bg-[#1C3A5E] opacity-0 group-hover:opacity-10 transition-opacity duration-500"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="py-24 md:py-32 px-6 md:px-12 lg:px-24">
    <div class="max-w-4xl mx-auto">
      <span class="block font-sans text-[#D4CFC7] text-xs uppercase tracking-[0.3em] mb-12">About Me</span>

      <div class="space-y-8 font-serif text-2xl md:text-3xl lg:text-4xl leading-relaxed text-[#1A1A1A] font-light">
        <p class="opacity-90">
          I grew up in mainland China, studied Economics at CUFE Beijing, then moved to Singapore for my MSc in Finance at NTU. From early on, <span class="text-[#8B7355] italic">I made a deliberate choice</span> to work across consulting, investment banking, and internet data analytics — because truly understanding finance requires entering the same problem from multiple angles.
        </p>
        <p class="opacity-90">
          I currently serve as a Management Trainee at TPC Group — Southeast Asia's leading luxury retailer representing prestigious brands such as <span class="italic decoration-1 underline underline-offset-4 decoration-[#D4CFC7]">Cartier, Van Cleef & Arpels, IWC, and Vacheron Constantin</span>. This role has given me a rare vantage point to observe how capital, strategy, and impact interweave in the world of luxury.
        </p>
        <p class="opacity-90">
          My sustained interests lie in <span class="italic decoration-1 underline underline-offset-4 decoration-[#D4CFC7]">Asian capital markets</span>, luxury retail, and impact investing. I hope to be someone who can build understanding and bridges between China and Southeast Asia.
        </p>
      </div>
    </div>
  </section>

  <!-- Education Section -->
  <section class="py-16 px-6 md:px-12 lg:px-24 border-t border-[#D4CFC7]/30">
    <div class="max-w-7xl mx-auto">
      <div class="flex justify-between items-end mb-16">
        <h2 class="font-serif text-5xl text-[#1A1A1A]">Education</h2>
        <div class="hidden md:block w-32 h-[1px] bg-[#1A1A1A]"></div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {education.map((item) => (
          <div class="p-8 bg-white/50 border border-[#D4CFC7]">
            <span class="font-sans text-xs uppercase tracking-widest text-[#8B7355] block mb-4">{item.period} &middot; {item.location}</span>
            <h3 class="font-serif text-2xl mb-2 text-[#1C3A5E]">{item.degree}</h3>
            <p class="font-sans text-base text-[#1A1A1A]/70">{item.school}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Experience Section -->
  <section id="experience" class="py-24 bg-white px-6 md:px-12 lg:px-24 border-y border-[#D4CFC7]/30">
    <div class="max-w-7xl mx-auto">
      <div class="flex justify-between items-end mb-16">
        <h2 class="font-serif text-5xl text-[#1A1A1A]">Selected Experience</h2>
        <div class="hidden md:block w-32 h-[1px] bg-[#1A1A1A]"></div>
      </div>

      <div class="flex flex-col md:grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {experience.map((item) => (
          <div class="group relative p-8 bg-[#F5F2EC]/30 border border-[#D4CFC7] hover:border-[#1C3A5E] transition-all duration-300 hover:-translate-y-1">
            <div class="h-12 mb-6 opacity-50 grayscale group-hover:grayscale-0 transition-all">
              <span class="font-sans font-bold text-xl tracking-tighter text-[#1A1A1A]">{item.company}</span>
            </div>
            <h3 class="font-serif text-2xl mb-3 text-[#1C3A5E]">{item.role}</h3>
            {item.period && (
              <p class="font-sans text-xs uppercase tracking-widest text-[#8B7355] mb-3">{item.period}</p>
            )}
            <p class="font-sans text-sm leading-relaxed text-[#1A1A1A]/70">{item.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Blog / Insights Section -->
  <section id="insights" class="py-24 md:py-32 px-6 md:px-12 lg:px-24">
    <div class="max-w-5xl mx-auto">
      <div class="flex justify-between items-end mb-16">
        <h2 class="font-serif text-5xl text-[#1A1A1A]">Blog</h2>
        <a href="/blog" class="font-sans text-xs uppercase tracking-widest text-[#8B7355] hover:text-[#1C3A5E] transition-colors">View all &rarr;</a>
      </div>

      <div class="space-y-0">
        {recentPosts.map((post) => (
          <a href={`/blog/${post.id}`} class="group flex flex-col md:flex-row gap-4 md:gap-12 py-10 border-t border-[#D4CFC7] cursor-pointer hover:bg-white/50 transition-colors no-underline">
            <div class="md:w-32 flex-shrink-0">
              <span class="font-sans text-xs uppercase tracking-widest text-[#8B7355]">
                {post.data.pubDate.toLocaleDateString('en-US', { month: 'short', year: 'numeric' })}
              </span>
            </div>
            <div class="flex-grow">
              <h3 class="font-serif text-3xl md:text-4xl mb-2 text-[#1A1A1A] group-hover:text-[#1C3A5E] transition-colors">
                {post.data.title}
              </h3>
              <p class="font-sans text-base text-[#1A1A1A]/60 max-w-2xl">
                {post.data.description}
              </p>
            </div>
            <div class="hidden md:flex items-center opacity-0 group-hover:opacity-100 transition-opacity -translate-x-4 group-hover:translate-x-0 duration-300">
              <span class="text-3xl font-serif">&rarr;</span>
            </div>
          </a>
        ))}
        <div class="w-full h-[1px] bg-[#D4CFC7]"></div>
      </div>
    </div>
  </section>

  <!-- Connect Section -->
  <section id="connect" class="py-32 bg-[#1C3A5E] text-[#F5F2EC] px-6 text-center">
    <div class="max-w-3xl mx-auto space-y-12">
      <p class="font-serif text-3xl md:text-4xl font-light italic opacity-90">
        "Open to conversations regarding luxury retail, Asian markets, sustainable investment, and cross-border opportunities."
      </p>

      <div class="flex flex-col md:flex-row justify-center gap-8 pt-8">
        <a href="https://linkedin.com/in/cynthia-liumingyue" target="_blank" class="inline-block px-10 py-4 border border-[#F5F2EC] hover:bg-[#F5F2EC] hover:text-[#1C3A5E] font-sans text-sm tracking-[0.2em] uppercase transition-all duration-300 no-underline text-[#F5F2EC]">
          Connect on LinkedIn
        </a>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-[#1C3A5E] text-[#F5F2EC]/40 py-8 text-center font-sans text-xs uppercase tracking-widest border-t border-[#F5F2EC]/10">
    &copy; {new Date().getFullYear()} Cynthia Liu. Built with <a href="https://hersite.app" class="text-[#F5F2EC]/60 hover:text-[#F5F2EC] transition-colors no-underline">HerSite</a>.
  </footer>

</Layout>
