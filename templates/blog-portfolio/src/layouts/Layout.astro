---
interface Props {
  title: string;
  hideNav?: boolean;
}

const { title, hideNav = false } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,600;1,400&family=DM+Sans:opsz,wght@9..40,300;9..40,400;9..40,500&display=swap" rel="stylesheet" />
    <title>{title} | Cynthia Liu</title>
  </head>
  <body class="bg-cream text-[#1A1A1A] antialiased selection:bg-gold selection:text-white font-sans">

    {!hideNav && (
      <header class="fixed top-0 left-0 right-0 z-50 bg-cream/80 backdrop-blur-md border-b border-stone/30">
        <nav class="max-w-7xl mx-auto px-6 md:px-12 lg:px-24 flex items-center justify-between h-16">
          <a href="/" class="font-serif text-xl font-light text-[#1A1A1A] hover:text-gold transition-colors">Cynthia Liu</a>
          <ul class="flex items-center gap-8">
            <li><a href="/#about" class="font-sans text-xs uppercase tracking-[0.2em] text-[#1A1A1A]/70 hover:text-gold transition-colors">About</a></li>
            <li><a href="/#experience" class="font-sans text-xs uppercase tracking-[0.2em] text-[#1A1A1A]/70 hover:text-gold transition-colors">Experience</a></li>
            <li><a href="/blog" class="font-sans text-xs uppercase tracking-[0.2em] text-[#1A1A1A]/70 hover:text-gold transition-colors">Blog</a></li>
            <li><a href="/#connect" class="font-sans text-xs uppercase tracking-[0.2em] text-[#1A1A1A]/70 hover:text-gold transition-colors">Connect</a></li>
          </ul>
        </nav>
      </header>
    )}

    <main>
      <slot />
    </main>

    <style>
      @keyframes fadeUp {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .animate-fade-up {
        animation: fadeUp 1s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
        opacity: 0;
      }
    </style>
  </body>
</html>
