---
interface ExperienceItem {
  company: string;
  role: string;
  desc: string;
  logo?: string;
}

interface Props {
  title?: string;
  items: ExperienceItem[];
}

const { title = 'Experience', items } = Astro.props;
---

<section id="experience" class="py-24 md:py-32 px-6 md:px-12 lg:px-24">
    <div class="max-w-5xl mx-auto">
        <h2 class="font-serif text-5xl text-ink mb-16 text-center md:text-left">{title}</h2>

        <div class="space-y-0">
            {items.map((item) => (
                <article class="group flex flex-col md:flex-row md:items-center gap-4 md:gap-12 py-10 border-t border-stone hover:bg-white/50 transition-colors">
                    <div class="w-28 flex-shrink-0 flex items-center justify-center">
                        {item.logo ? (
                            <img src={item.logo} alt={item.company} class="max-w-full max-h-10 object-contain opacity-60 grayscale group-hover:grayscale-0 group-hover:opacity-100 transition-all" />
                        ) : (
                            <span class="font-sans text-xs uppercase tracking-widest text-oldGold text-center">{item.company}</span>
                        )}
                    </div>
                    <div class="flex-grow">
                        <h3 class="font-serif text-3xl md:text-4xl mb-2 text-ink group-hover:text-navy transition-colors">
                            {item.role}
                        </h3>
                        <p class="font-sans text-base text-ink/60 max-w-2xl">
                            {item.desc}
                        </p>
                    </div>
                </article>
            ))}
            <div class="w-full h-[1px] bg-stone"></div>
        </div>
    </div>
</section>
