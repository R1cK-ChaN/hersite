---
interface Props {
  label?: string;
}

const { label = 'About Me' } = Astro.props;
---

<section class="py-24 md:py-32 px-6 md:px-12 lg:px-24">
    <div class="max-w-4xl mx-auto">
        <span class="block font-sans text-stone text-xs uppercase tracking-[0.3em] mb-12">{label}</span>

        <div class="space-y-8 font-serif text-2xl md:text-3xl lg:text-4xl leading-relaxed text-ink font-light">
            <slot />
        </div>
    </div>
</section>
