---
interface Props {
  label?: string;
}

const { label = 'About Me' } = Astro.props;
---

<section id="about" class="py-24 md:py-32 px-6 md:px-12 lg:px-24">
    <div class="max-w-5xl mx-auto">
        <h2 class="font-serif text-5xl text-ink mb-16 text-center md:text-left">{label}</h2>

        <div class="space-y-6 font-serif text-base md:text-lg leading-relaxed text-ink font-light">
            <slot />
        </div>
    </div>
</section>
