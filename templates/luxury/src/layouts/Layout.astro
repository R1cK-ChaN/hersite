---
import '../styles/theme.css';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description = '', ogImage } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<html lang="en" class="scroll-smooth">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Twitter -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {ogImage && <meta property="og:image" content={new URL(ogImage, Astro.site)} />}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {ogImage && <meta name="twitter:image" content={new URL(ogImage, Astro.site)} />}

    <title>{title}</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,600;1,400&family=DM+Sans:opsz,wght@9..40,300;9..40,400;9..40,500&display=swap" rel="stylesheet">

    <!-- JSON-LD Person structured data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Person",
      "name": title.split('|')[0]?.trim() || title,
      "url": Astro.site?.toString(),
      "description": description,
    })} />
</head>
<body class="bg-cream text-ink antialiased selection:bg-oldGold selection:text-white">

    <!-- Navigation -->
    <nav class="fixed top-0 left-0 right-0 z-50 bg-cream/80 backdrop-blur-md border-b border-stone/20" aria-label="Main navigation">
        <div class="max-w-7xl mx-auto px-6 md:px-12 lg:px-24 flex items-center justify-between h-16">
            <a href="/" class="font-serif text-xl text-ink hover:text-navy transition-colors">{title.split('|')[0]?.trim() || 'Home'}</a>
            <!-- Desktop nav -->
            <div class="hidden md:flex items-center gap-8 font-sans text-sm tracking-widest uppercase">
                <a href="/#about" class="text-ink/70 hover:text-navy transition-colors">About</a>
                <a href="/#experience" class="text-ink/70 hover:text-navy transition-colors">Experience</a>
                <a href="/insights/" class="text-ink/70 hover:text-navy transition-colors">Insights</a>
                <a href="/#connect" class="text-ink/70 hover:text-navy transition-colors">Connect</a>
            </div>
            <!-- Mobile hamburger -->
            <button id="mobile-menu-btn" class="md:hidden flex flex-col gap-1.5 p-2" aria-label="Toggle menu">
                <span class="block w-5 h-0.5 bg-ink transition-transform" id="bar1"></span>
                <span class="block w-5 h-0.5 bg-ink transition-opacity" id="bar2"></span>
                <span class="block w-5 h-0.5 bg-ink transition-transform" id="bar3"></span>
            </button>
        </div>
        <!-- Mobile menu -->
        <div id="mobile-menu" class="md:hidden hidden bg-cream/95 backdrop-blur-md border-b border-stone/20">
            <div class="flex flex-col px-6 py-4 gap-4 font-sans text-sm tracking-widest uppercase">
                <a href="/#about" class="text-ink/70 hover:text-navy transition-colors">About</a>
                <a href="/#experience" class="text-ink/70 hover:text-navy transition-colors">Experience</a>
                <a href="/insights/" class="text-ink/70 hover:text-navy transition-colors">Insights</a>
                <a href="/#connect" class="text-ink/70 hover:text-navy transition-colors">Connect</a>
            </div>
        </div>
    </nav>
    <script>
        const btn = document.getElementById('mobile-menu-btn');
        const menu = document.getElementById('mobile-menu');
        const bar1 = document.getElementById('bar1');
        const bar2 = document.getElementById('bar2');
        const bar3 = document.getElementById('bar3');
        btn?.addEventListener('click', () => {
            const open = !menu?.classList.contains('hidden');
            menu?.classList.toggle('hidden');
            bar1?.classList.toggle('rotate-45');
            bar1?.classList.toggle('translate-y-[4px]');
            bar2?.classList.toggle('opacity-0');
            bar3?.classList.toggle('-rotate-45');
            bar3?.classList.toggle('-translate-y-[4px]');
        });
        menu?.querySelectorAll('a').forEach(a => {
            a.addEventListener('click', () => menu?.classList.add('hidden'));
        });
    </script>

    <slot />

    <footer class="bg-navy text-cream/40 py-8 text-center font-sans text-xs uppercase tracking-widest border-t border-cream/10">
        &copy; {new Date().getFullYear()} {title.split('|')[0]?.trim() || 'All Rights Reserved'}.  All Rights Reserved.
    </footer>
</body>
</html>
